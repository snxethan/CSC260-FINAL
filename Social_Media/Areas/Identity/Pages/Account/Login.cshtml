@page
@using Social_Media.Components.Layout
@model LoginModel
@{
    ViewData["Title"] = "Log in";

}
<head>
    <link rel="stylesheet" href="~/app.css?v=3" />
</head>

<div class="login-page card">
    <form id="account" method="post" class="grid gap-3">
        <h2>Use a local account to log in</h2>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <button id="login-submit" type="submit" class="w-100 btn btn-primary">Log in</button>

        <div class="mt-3">
            <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
        </div>
    </form>
</div>

<div class="external-login card mt-3">
    <section>
        <h3>Use another service to log in</h3>
        <hr />
        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
        {
            <p class="text-muted">
                No external authentication services are configured.
                See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article</a>.
            </p>
        }
        else
        {
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div class="d-grid gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline"
                                name="provider" value="@provider.Name"
                                title="Log in using your @provider.DisplayName account">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        }
    </section>
</div>

